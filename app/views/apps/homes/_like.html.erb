<% if current_user.liked_by?(@column) %>

  <%= link_to apps_create_like_path(@column), class: "like-link", method: :DELETE, remote: true do %>
    <i class="fa fa-heart unlike-btn"></i>
  <% end %>
  
  <%= @column.likes.count %>
  
<% else %>
  <%= link_to apps_create_like_path(@column), class: "like-link", method: :POST, remote: true do %>
     <i class="fa fa-heart like-btn"></i>
  <% end %>
  <%= @column.likes.count %>
<% end %>
