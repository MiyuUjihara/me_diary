
<article class="admin-column-table">
  <div class="column-table-inner">
    <h2 class="table-title">List of columns</h2>
    <div class="table-container">
      <table class="table table-striped table-hover">
          <thead>
            <tr class="table-column">
              <th scope="col" class="val">id</th>
              <th scope="col" class="val">user_name</th>
              <th scope="col" class="val">status</th>
              <th scope="col" class="val">category</th>
              <th scope="col" class="val">title</th>
              <th scope="col" class="val">thumbnail_image</th>
              <th scope="col" class="val"></th>
            </tr>
          </thead>
          <tbody>
            <% @columns.each do |column| %>
              <tr>
                <th scope="row" class="val val2"><%= column.id %></th>
                <td class="val"><%= column.admin_user.name %></td>
                <td class="val"><%= column.status %></td>
                <td class="val"><%= column.category.name %></td>
                <td class="val"><%= column.title %></td>
                <td class="val"><%= image_tag column.image.url, size: "90x60" %></td>
                <td class="val">
                  <%= link_to "edit", edit_admin_column_path(column), class: "column-table-btn"%><br>
                  <%= link_to "delete", admin_column_path(column), method: :delete, class: "column-table-btn"%></td>
                </td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</article>


