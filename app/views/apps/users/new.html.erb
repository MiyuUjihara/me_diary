<div class="users-form-container">
  <div class="users-content">
  <h1 class="users-content-h1">無料会員登録</h1>
    <div class="users-content-inner">
      <div class="users-simple-content">
        <%= form_with model: @user, url: apps_users_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label   "名前", class: "form_label"  %>
              <%= f.text_field :name, placeholder: "名前", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "メールアドレス", class: "form_label" %>
              <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "パスワード", class: "form_label" %>
              <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "再度パスワード", class: "form_label" %>
              <%= f.password_field :password_confirmation, placeholder: "再度パスワード", class: "form-control" %>
            </div>
            <div class="btn-group">
              <%= f.submit "新規登録", class: "users_btn" %>
            </div>
        <% end %>
      </div>
      <hr>
      <div class="form_link">
        <%= link_to "ログインはこちら", apps_login_path, class:"link" %>
      </div>
    </div>
  </div>
</div>