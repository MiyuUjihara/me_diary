<div style="display: flex;">
  <%= render "apps/users/apps_sidemenubar"%>
  <div class="current_user_todos_wrapper">
    <h2 class="current_user_todos_header">過去のToDo一覧</h2>
    <ul class="current_user_todos">
      <%  @current_user_todos.each do |current_user_todo| %>
        <div class="current_user_todo_inner">
          <li class="current_user_todo_list"><%= image_tag current_user_todo.todo.image.url, class: "current_user_todo_image" %></li>
          <li class="current_user_todo_title"><%= current_user_todo.todo.title %></li>
          <li class="current_user_todo_status"><%= current_user_todo.status %></li>
        </div>
      <% end %>
    </ul>
  </div>
</div>