<div class="header">
  <div class="header-inner">
    <%= link_to apps_root_path, class: "header-logo-link" do %>
      <div class="header-logo"></div>
    <% end %>

    <nav class="header-right-outer">
      <ul class="list-unstyled header-nav-text-list">
        <% if current_user %> 
          <li class="button-container"><%= link_to  apps_root_path, class: "button2 apps_choice2" do %><i class="fas fa-book-open"></i><p class="button-print">コラム一覧</p><% end %></li>
          <li class="button-container"><%= link_to apps_user_path(current_user.name), class: "button2 apps_choice" do %><i class="far fa-user-circle"></i><p class="button-print">マイページ</p><% end %></li>
        <% else %>
          <li class="button-container"><%= link_to "ログイン", apps_login_path, class: "button"%></li>
          <li class="button-container"><%= link_to "無料会員登録", new_apps_user_path, class: "button"%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>