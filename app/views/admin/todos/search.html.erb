<article class="admin-column-table">
  <div class="column-table-inner">
    <% if @todos_search.present? %>
     <div class="column_title_search">
        <h2 class="table-title"><%= "#{@keyword}のキーワードを含む記事" %></h2>
        <%= link_to "ToDo一覧へもどる", admin_todos_path %>
      </div>
      <div class="table-container">
        <table class="table table-striped table-hover">
          <thead>
            <tr class="table-column">
              <th scope="col" class="val">id</th>
              <th scope="col" class="val">ユーザー名</th>
              <th scope="col" class="val">ステータス</th>
              <th scope="col" class="val">カテゴリ</th>
              <th scope="col" class="val">タイトル</th>
              <th scope="col" class="val">サムネイル画像</th>
              <th scope="col" class="val"></th>
            </tr>
          </thead>
          <tbody>
            <% @todos_search.each do |todo| %>
              <tr>
                <th scope="row" class="val val2"><%= todo.id %></th>
                <td class="val"><%= todo.admin_user.name %></td>
                <td class="val"><%= todo.status %></td>
                <td class="val"><%= todo.category.name %></td>
                <td class="val"><%= todo.title %></td>
                <td class="val"><%= image_tag todo.image.url, size: "90x60" %></td>
                <td class="val">
                  <%= link_to "編集", edit_admin_todo_path(todo), class: "column-table-btn" %><br>
                  <%= link_to "削除", admin_todo_path(todo), method: :delete, data: { confirm: "【確認】ToDoを削除してもよろしいですか？" }, class: "column-table-btn"%></td>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
    <div class="admin_search_column">
      <h2 class="search_column_keyword"><%= "#{@keyword}のキーワードを含む記事" %></h2>
      <div class="search_column_inner">
        <div><%= "#{@keyword}のキーワードを含む記事はありませんでした" %></div>
        <div class="search_uncolumn_list">
          <h2>再検索のヒント</h2>
          <p>・誤字脱字がないかを確認してみてください。</p>
          <p>・ひらがな、カタカナなどの表記を確認してみてください。</p>
        </div>
        <div>
          <%= link_to "ToDo一覧へもどる", admin_todos_path %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</article>