<div class="container">
  <div class="content">
    <h1>管理者ログイン</h1>
    <div class="content-inner">
      <div class="simple-content">
        <%= form_with scope: :session, class: "new-user", local: true do |f| %>
            <div class="form-group">
              <%= f.label "メールアドレス", class: "form_label"  %>
              <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "パスワード", class: "form_label" %>
              <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
            </div>
            <%= f.submit "ログイン", class: "btn btn-block btn-with-margin" %>
        <% end %>
      </div>
      <hr>
      <div class="form_link">
        <%= link_to "管理者登録", new_admin_user_path, class:"link" %>
      </div>
    </div>
  </div>
</div>